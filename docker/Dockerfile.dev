# Development Dockerfile for Angular application
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY ../package*.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source code
COPY .. .

# Expose port for Angular dev server
EXPOSE 4200

# Start dev server
CMD ["npx", "ng", "dev", "--host", "0.0.0.0"]
